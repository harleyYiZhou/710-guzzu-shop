/* pages/checkout/checkout.wxss */
page{ 
 height: 100%; 
  background-color: #f2f2f2
} 
.checkout-container{
  /* padding: 10px;  */
  font-family: "微软雅黑";
  color: #616161;
  height: 100%; 
}

.ticket-message{
  text-align: center;
  margin-top: 15rpx;
  background-color: white;
}
.ticket-img{
  width: 80%;
}
.ticket-name{
  text-align: center;
}
.ticket-detail{
  /* padding-left: 5%; */
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
}
.ticket-no{
   margin-top: 5rpx;
  background-color: white;
  font-size: 35rpx;
  text-align: center;
  line-height: 35px;
  /* height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx; */
}
.ticket-account{
   margin-top: 15rpx;
  background-color: white;
  padding: 5rpx 20rpx 5rpx 20rpx;
}
.ticket-buyer{
   margin-top: 15rpx;
  background-color: white;
   padding: 5rpx 20rpx 5rpx 20rpx; 
}
.ticket-date{
 margin-top: 15rpx;
  background-color: white;
  padding: 5rpx 20rpx 5rpx 20rpx; 
  margin-bottom: 90rpx; 
}
.consume-btn{
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
  /* background-color: green; */
  border-radius: 3px
}
.text-left{
  text-align: left;
}
.text-right{
  text-align: right;
}
.width-20{
  width: 20%;
}
.width-30{
  width: 30%
}
.width-40{
  width: 40%;
}
.width-60{
  width: 60%;
}
.width-70{
  width: 70%;
}
.width-80{
  width: 80%
}
.layout-row {
	display: flex;
	flex-direction: row;
}
.layout-wrap {
	flex-wrap: wrap;
}
.bar{
  border: 1rpx solid #f2f2f2
}
.group{
   height: 30px;
  line-height: 30px;
  vertical-align: middle;
  position: relative
}
.icon{
   margin-top: 10rpx; 
  height: 23px;
  position: absolute;
  top: -10rpx;
  left: 120rpx;
}
