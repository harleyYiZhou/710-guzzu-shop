<view class="">
  <view class="mt-20">
    <zan-panel>
      <view class=" my-20">
        <zan-row>
          <zan-col col="6" offset="1" col-class="custom-zan-col">
            <image class="width-100" src="{{userTicket.product.image.url}}" mode="widthFix"></image>
          </zan-col>
          <zan-col col="12" offset="1" col-class="custom-zan-col">
            <view class="zan-card__detail">
              <view class="zan-card__detail-row">
                <view class=" zan-ellipsis--l2">
                  {{userTicket.product.name.en}}
                </view>
              </view>
              <view class="zan-card__detail-row zan-c-gray-darker">
                <view class="zan-card__left-col">
                  ￥{{userTicket.product.price/100}}
                </view>
              </view>
              <view class="zan-card__detail-row zan-c-gray-darker">
                <view class="">{{trans.status}}：{{status}} </view>
              </view>
            </view>
          </zan-col>
          <zan-col col="4">
             <!-- <icon class="zan-icon zan-icon-passed" type="success" size="30" /> -->
             <!-- <icon type="success" size="30"></icon> -->
             <zan-cell wx:if="{{isClick}}"><icon slot="footer" type="success" size="30"></icon></zan-cell>
          </zan-col>
        </zan-row>
      </view>
    </zan-panel>
  </view>
  <view class="mt-20">
    <zan-panel>
      <zan-cell title="{{trans.attendeeName}}">
        <view slot="footer">{{buyerName}}</view>
      </zan-cell>
      <zan-cell title="{{trans.attendeePhone}}">
        <view slot="footer">{{buyerPhone}}</view>
      </zan-cell>
    </zan-panel>
  </view>
  <view class="mt-20">
    <zan-panel>
      <zan-cell title="{{trans.ticketNo}}">
        <view slot="footer">{{userTicket.ticketNo}}</view>
      </zan-cell>
      <zan-cell title="{{trans.createTime}}">
        <view slot="footer">{{createTime}}</view>
      </zan-cell>
      <zan-cell title="{{trans.buyerName}}">
        <view slot="footer">{{buyerName}}</view>
      </zan-cell>
      <zan-cell wx:if="{{isClick}}" title="{{trans.useTime}}">
        <view slot="footer">{{useTime}}</view>
      </zan-cell>
    </zan-panel>
  </view>
