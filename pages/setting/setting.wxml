<import src="../../components/bottom-nav/bottom-nav" />

<view>
  <zan-panel>
    <zan-cell-group>
      <radio-group class="radio-group" bindchange="chooseLang">
        <zan-cell title="中文">
          <label class="radio" slot="footer">
            <radio value="zh" checked="{{locale==='zh'}}" />{{item.value}}
          </label>
        </zan-cell>
        <zan-cell title="ENGLISH">
          <label class="radio" slot="footer">
            <radio value="en" checked="{{locale==='en'}}" />{{item.value}}
          </label>
        </zan-cell>
      </radio-group>
    </zan-cell-group>
  </zan-panel>
  <view class="mt-40">
    <zan-panel>
      <zan-cell title="{{trans.logout}}" bindtap="logout"></zan-cell>
    </zan-panel>
  </view>

